{
	"apps": [
		{
			"name": "wedding",
			"script": "index.js",
			"args": [],
			"merge_logs": true,
			"watch": false,
			"ignore_watch": [
				"node_modules",
				"static",
				".git.*",
				".idea",
				"*.db"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"env_production": {
				"NODE_ENV": "production"
			}
		}
	],
	"deploy": {
		"production": {
			"user": "node",
			"host": "192.168.1.20",
			"ref": "origin/master",
			"repo": "https://github.com/Conroman16/wedding.git",
			"path": "/var/www/wedding",
			"post-deploy": "chmod +x deploy.sh && ./deploy.sh"
		}
	}
}
